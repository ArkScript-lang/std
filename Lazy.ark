(let lazy:eval (fun (f) {
    (mut _has_been_called false)
    (mut _memorized_value nil)

    (fun (&f &_has_been_called &_memorized_value) {
        (if (not _has_been_called)
            {
                (set _has_been_called true)
                (set _memorized_value (f))
            })
        _memorized_value
    })
}))
