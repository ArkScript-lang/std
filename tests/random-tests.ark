(import std.Random)
(import std.Testing)

(test:suite random {
    (test:case "choice" {
        (test:eq nil (random:choice []))
        (test:eq nil (random:choice ""))
        (test:eq 1 (random:choice [1]))
        (test:eq "1" (random:choice "1"))

        # have to repeat the test to be sure that we hit every index
        (test:eq 1 (random:choice [1 1 1]))
        (test:eq 1 (random:choice [1 1 1]))
        (test:eq 1 (random:choice [1 1 1]))
        (test:eq 1 (random:choice [1 1 1]))
        (test:eq 1 (random:choice [1 1 1]))
        (test:eq "1" (random:choice "111"))
        (test:eq "1" (random:choice "111"))
        (test:eq "1" (random:choice "111"))
        (test:eq "1" (random:choice "111"))
        (test:eq "1" (random:choice "111")) })})

